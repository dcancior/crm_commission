<odoo>
    <data>
        <!-- Vista heredada para añadir comisión a la vista lista de facturas -->
        <record id="view_account_invoice_tree_inherit_margin" model="ir.ui.view">
            <field name="name">account.move.tree.inherit.margin</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_out_invoice_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_user_id']" position="after">
                    <field name="commission_percent"
                           string="Comisión (%)"
                           readonly="1"
                           optional="show"
                           groups="crm_commission.group_invoice_tree_commission_view"/>
                    <field name="commission_amount"
                           string="Monto Comisión"
                           sum="Total Comisión"
                           widget="monetary"
                           readonly="1"
                           optional="show"
                           groups="crm_commission.group_invoice_tree_commission_view"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
