<odoo>
    <report
        id="mechanic_commission_report_pdf"
        string="Reporte de comisiones de mecánico"
        model="mechanic.commission.wizard"
        report_type="qweb-pdf"
        name="crm_commission.mechanic_commission_report_template"
        file="crm_commission.mechanic_commission_report_template"
        groups="crm_commission.group_mechanic_commission_view"
        print_report_name="'Comision_Mecanico_%s_%s_%s' % ((object.employee_id.name or ''), (object.month or ''), (object.year or ''))"
    />

    <template id="mechanic_commission_report_template">
        <t t-call="web.external_layout">
            <t t-set="o" t-value="doc"/>
            <div class="page">
                <h2>Comisiones de Mecánico</h2>
                <p>
                    <b>Mecánico:</b> <t t-esc="o.employee_id.name"/><br/>
                    <b>Periodo:</b> <t t-esc="o.month_name"/> <t t-esc="o.year"/>
                </p>

                <table class="table table-sm o_main_table">
                    <thead>
                        <tr>
                            <th>Factura</th>
                            <th>Fecha</th>
                            <th>Servicio</th>
                            <th class="text-right">Cantidad</th>
                            <th class="text-right">Horas</th>
                            <th class="text-right">Subtotal Cliente</th>
                            <th class="text-right">Pago Mecánico</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="o.line_ids" t-as="l">
                            <tr>
                                <td><t t-esc="l.invoice_name"/></td>
                                <td><t t-esc="l.invoice_date"/></td>
                                <td><t t-esc="l.product_name"/></td>
                                <td class="text-right"><t t-esc="('%.2f' % (l.quantity or 0.0))"/></td>
                                <td class="text-right"><t t-esc="('%.2f' % (l.hours or 0.0))"/></td>
                                <td class="text-right"><t t-esc="formatLang(l.subtotal_customer, currency_obj=o.currency_id)"/></td>
                                <td class="text-right"><t t-esc="formatLang(l.payout, currency_obj=o.currency_id)"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <div class="mt16">
                    <p><b>Servicios:</b> <t t-esc="o.services_count"/></p>
                    <p><b>Horas totales:</b> <t t-esc="('%.2f' % (o.total_hours or 0.0))"/></p>
                    <p><b>Importe facturado (cliente):</b> <t t-esc="formatLang(o.amount_invoiced or 0.0, currency_obj=o.currency_id)"/></p>
                    <p><b>Total a pagar al mecánico:</b> <t t-esc="formatLang(o.payout_total or 0.0, currency_obj=o.currency_id)"/></p>
                </div>
            </div>
        </t>
    </template>
</odoo>
