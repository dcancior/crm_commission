<odoo>
    <!-- Grupo de seguridad para el report de mecanicos-->
    <record id="group_mechanic_commission_view" model="res.groups">
        <field name="name">Ver Comisiones de Mecánicos</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

     <!-- Grupo de seguridad para el report de ventas-->
    <record id="group_commission_view" model="res.groups">
        <field name="name">Ver Reporte de Comisiones</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <!-- Grupo solo para la vista de comisiones en pedidos de venta -->
    <record id="group_sale_order_commission_fields" model="res.groups">
        <field name="name">Ver Campos de Comisión en Pedidos</field>
        <field name="category_id" ref="base.module_category_sales"/>
    </record>

    <!-- Grupo para ver comisiones en la lista (tree) de facturación -->
    <record id="group_invoice_tree_commission_view" model="res.groups">
        <field name="name">Ver comisiones en lista tree de facturación</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>
</odoo>
