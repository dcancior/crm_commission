<odoo>
    <record id="view_mechanic_commission_wizard_form" model="ir.ui.view">
        <field name="name">mechanic.commission.wizard.form</field>
        <field name="model">mechanic.commission.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de comisiones de mecánicos (mensual)">
                <group>
                    <field name="employee_id" options="{'no_create_edit': True}"/>
                    <field name="month"/>
                    <field name="year"/>
                </group>
                <group>
                    <field name="services_count" readonly="1"/>
                    <field name="total_hours" readonly="1"/>
                    <field name="amount_invoiced" readonly="1"/>
                    <field name="payout_total" readonly="1"/>
                </group>
                <notebook>
                    <page string="Detalle de líneas facturadas (pagadas)">
                        <field name="line_ids" nolabel="1">
                            <tree editable="bottom">
                                <field name="invoice_name" readonly="1"/>
                                <field name="invoice_date" readonly="1"/>
                                <field name="product_name" readonly="1"/>
                                <field name="quantity" readonly="1"/>
                                <field name="hours" readonly="1"/>
                                <field name="subtotal_customer" readonly="1"/>
                                <field name="payout" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button string="Descargar PDF" type="object" name="action_print_pdf" class="btn-primary"/>
                    <button string="Cerrar" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_mechanic_commission_wizard"
            name="Reporte de Comisiones (Mecánicos)"
            res_model="mechanic.commission.wizard"
            view_mode="form"
            target="new"/>

    <menuitem id="menu_mechanic_commission_root"
              name="Comisiones Mecánicos"
              sequence="100"
              groups="crm_commission.group_mechanic_commission_view"/>

    <menuitem id="menu_mechanic_commission_report"
              name="Reporte mensual"
              parent="menu_mechanic_commission_root"
              action="action_mechanic_commission_wizard"
              sequence="10"
              groups="crm_commission.group_mechanic_commission_view"/>
</odoo>
