<odoo>
    <record id="view_mechanic_commission_wizard_form" model="ir.ui.view">
        <field name="name">mechanic.commission.wizard.form</field>
        <field name="model">mechanic.commission.wizard</field>
        <field name="arch" type="xml">
            <form string="Reporte de comisiones de mecánicos (mensual)">
                <sheet>

                    <!-- Filtros -->
                    <group col="4">
                        <field name="employee_id"
                               options="{'no_create_edit': True}"
                               domain="[('active','=',True), ('job_id.name','ilike','Mecán')]"/>
                        <field name="month"/>
                        <field name="year"/>
                        <field name="report_paid_filter"/>
                    </group>

                    <!-- KPIs -->
                    <group col="4">
                        <field name="services_count" readonly="1"/>
                        <field name="total_hours" readonly="1"/>
                        <field name="amount_invoiced" readonly="1"/>
                        <field name="payout_total" readonly="1"/>
                    </group>

                    <!-- Detalle -->
                    <notebook>
                        <page string="Detalle de líneas facturadas (pagadas)">
                            <field name="line_ids" nolabel="1"
                                   context="{'no_open': 1}"
                                   options="{'no_create': True}">
                                <tree editable="bottom" create="0" edit="0">
                                    <!-- Pon primero las columnas esenciales para que en móvil no se corte lo importante -->
                                    <field name="invoice_name" readonly="1"/>
                                    <field name="product_name" readonly="1"/>
                                    <field name="hours" readonly="1"/>
                                    <field name="payout" readonly="1"/>
                                    <!-- El resto al final -->
                                    <field name="is_paid"/>
                                    <field name="quantity" readonly="1"/>
                                    <field name="cost_per_hour" readonly="1"/>
                                    <field name="paid_date" readonly="1"/>
                                    <field name="paid_by" readonly="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>

                </sheet>

                <footer>
                    <button name="action_mark_all_paid" type="object" string="Marcar todas como pagadas" class="oe_highlight"/>
                    <button string="Cerrar" special="cancel"/>
                    <button name="action_print_pdf" type="object" string="Descargar PDF"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_mechanic_commission_wizard"
                name="Reporte de Comisiones (Mecánicos)"
                res_model="mechanic.commission.wizard"
                view_mode="form"
                target="new"/>

    <menuitem id="menu_mechanic_commission_root"
              name="Comisiones Mecánicos"
              sequence="100"
              groups="crm_commission.group_mechanic_commission_view"
              web_icon="crm_commission,static/description/icon_mechanic.svg"/>

    <menuitem id="menu_mechanic_commission_report"
              name="Reporte mensual"
              parent="menu_mechanic_commission_root"
              action="action_mechanic_commission_wizard"
              sequence="10"
              groups="crm_commission.group_mechanic_commission_view"/>



    <record id="view_mechanic_commission_mass_pay_wizard_form" model="ir.ui.view">
        <field name="name">mechanic.commission.mass.pay.wizard.form</field>
        <field name="model">mechanic.commission.mass.pay.wizard</field>
        <field name="arch" type="xml">
            <form string="Marcar como pagadas">
                <group>
                    <field name="pago_comision" required="1"/>
                    <field name="paid_date"/>
                    <field name="pay_note"/>
                </group>
                <group>
                    <field name="entry_ids" widget="many2many_tags" options="{'no_open': True, 'no_create': True}"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Aplicar" class="oe_highlight"/>
                    <button string="Cancelar" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
